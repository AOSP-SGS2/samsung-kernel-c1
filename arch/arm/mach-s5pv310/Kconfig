# Configuration options for the S5PV310

if ARCH_S5PV310

config CPU_S5PV310
	bool
	select PLAT_S5P
	select S3C_PL330_DMA
	select S3C_DEV_RTC
	help
	  Enable S5PV310 CPU support

config S5PV310_SETUP_I2C1
	bool
	default y
	help
	  Common setup code for i2c bus 1.

config S5PV310_SETUP_FB_S3C
	bool
	default y
	help
	  Setup code for S5PV310 FIMD

config S5PV310_SETUP_I2C2
	bool
	default y
	help
	  Common setup code for i2c bus 2.

config S5PV310_SETUP_I2C3
	bool
	default y
	help
	  Common setup code for i2c bus 3.

config S5PV310_SETUP_I2C4
	bool
	default y
	help
	  Common setup code for i2c bus 4.

config S5PV310_SETUP_I2C5
	bool
	default y
	help
	  Common setup code for i2c bus 5.

config S5PV310_SETUP_I2C6
	bool
	default y
	help
	  Common setup code for i2c bus 6.

config S5PV310_SETUP_I2C7
	bool
	default y
	help
	  Common setup code for i2c bus 7.

# machine support

config MACH_SMDKV310
	bool "SMDKV310"
	select CPU_S5PV310
	select ARCH_SPARSEMEM_ENABLE
	select SAMSUNG_DEV_ADC
	select SAMSUNG_DEV_TS
	select S3C_DEV_WDT
	select HAVE_S3C2410_WATCHDOG
	help
	  Machine support for Samsung SMDKV310

config S5PV310_FPGA
	bool "FPGA"
endif


